<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/profile_image_relative"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="Фото профілю"
        android:src="@drawable/ic_launcher_foreground"
        app:tint="#009688" />

    <TextView
        android:id="@+id/username_text_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile_image_relative"
        android:layout_alignTop="@id/profile_image_relative"
        android:layout_marginStart="16dp"
        android:text="Ім'я Користувача"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/bio_edit_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image_relative"
        android:layout_marginTop="24dp"
        android:layout_above="@+id/save_button_relative"
        android:hint="Ваша біографія..."
        android:gravity="top"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background" />

    <Button
        android:id="@+id/save_button_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="Зберегти"
        android:backgroundTint="#009688" />

</RelativeLayout>